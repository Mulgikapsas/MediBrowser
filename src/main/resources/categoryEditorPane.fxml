<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.qa.ui.editor.CategoryEditorPane"
          alignment="CENTER"
          hgap="5"
          vgap="5">
    <padding>
        <Insets top="10" bottom="10"/>
    </padding>
    <Label text="%media.file.editor.categories.label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="categoryTextField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Button fx:id="addCategoryButton" text="%media.file.editor.add.category.button" GridPane.columnIndex="2"
            GridPane.rowIndex="0" prefWidth="60"/>
    <Button fx:id="updateCategoryButton" text="%category.editor.update.category.button" GridPane.columnIndex="3"
            GridPane.rowIndex="0"/>
    <ListView fx:id="categoryList" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Button fx:id="removeCategoryButton"
            text="%media.file.editor.remove.category.button"
            prefWidth="60"
            GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.valignment="TOP"/>
</GridPane>